<?xml version="1.0" encoding="UTF-8"?>
<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout" controllerName="Quickstart.App" displayBlock="true">
   <App>
      <Page title="Sample CF App with B1/ByD/S4 on Destination Service">
         <l:VerticalLayout class="sapUiContentPadding" width="100%">
            <l:content>
               <l:HorizontalLayout class="sapUiContentPadding">
                  <Button text="Northwind GET Products" press=".onPress" />
                  <Button text="B1 POST Login" press=".onB1Login" type="Emphasized" />
                  <Button text="B1 GET Items" press=".onB1GetItems" type="Emphasized" />
                  <Button text="ByD POST Service Request" press=".onByDServiceRequest" type="Emphasized" />
                  <Button text="S4 GET Request" press=".onS4ServiceRequest" type="Emphasized" />
               </l:HorizontalLayout>
               <MessageStrip showIcon="true" type="Warning" text="Make sure you've setup all the required destinations in SAP BTP. Refer to README.MD" />
               <TextArea id="output" placeholder="Output will be shown here..." growing="true" growingMaxLines="7" width="100%" />
